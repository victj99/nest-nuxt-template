{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "~/*": [
        "client/*"
      ],
      "@/*": [
        "client/*"
      ],
      "@server/*": [
        "server/*"
      ],
      "@common/*": [
        "common/*"
      ]
    }
  },
  "types": [
    "@types/node",
    "@nuxt/types"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
}